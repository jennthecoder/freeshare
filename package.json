{
  "name": "freeshare",
  "version": "1.0.0",
  "description": "Community marketplace for sharing free items",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "tsx watch --env-file=.env src/server.ts",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.0",
    "@libsql/client": "^0.15.15",
    "dotenv": "^17.2.3",
    "hono": "^4.3.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.6.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0"
  }
}
